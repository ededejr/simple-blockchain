{
  "name": "@dxede/simple-blockchain",
  "version": "0.1.2",
  "description": "A simple POC implementation of a blockchain in TS",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build-prod": "rm -rf build && tsc --project tsconfig.prod.json",
    "launch": "ts-node src/launch.ts",
    "release": "release-it",
    "test": "rm -rf data && tsc && mocha build/**/*.spec.js"
  },
  "keywords": [
    "blockchain",
    "typescript"
  ],
  "author": "@dxede",
  "license": "MIT",
  "devDependencies": {
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/winston": "^2.4.4",
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "release-it": "^14.2.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "winston": "^3.3.3"
  },
  "release-it": {
    "git": {
      "commit": true,
      "commitMessage": "chore: release v${version}",
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
      "tagAnnotation": "Release v${version}"
    },
    "npm": {
      "publish": false,
      "publishPath": "build"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    },
    "hooks": {
      "before:init": "npm run test && npm run build-prod",
      "after:git:release": "cp package.json build/package.json && cp readme.md build/readme.md",
      "after:release": "npm publish build"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
